---
import Search from './Search.astro';

const navLinks = [
  { href: "/", label: "Home" },
  { href: "/blog", label: "Blog" },
  { href: "/projects", label: "Projects" },
  { href: "/about", label: "About" },
];

const currentPath = Astro.url.pathname;
---

<header class="border-b border-gray-200 bg-white print:hidden">
  <div class="mx-auto flex max-w-6xl flex-col px-4 py-4 sm:flex-row sm:items-center sm:justify-between">
    <div class="flex items-center justify-between">
      <a
        href="/"
        class="text-xl font-bold tracking-tight text-gray-900 transition-colors hover:text-gray-600 mr-8"
      >
        Greg
      </a>
      
      <!-- Mobile menu button placeholder if needed -->
    </div>

    <div class="flex flex-1 flex-col gap-4 sm:flex-row sm:items-center sm:justify-between">
      <nav>
        <ul class="flex items-center gap-1 sm:gap-2">
          {
            navLinks.map((link) => {
              const isActive =
                link.href === "/"
                  ? currentPath === "/"
                  : currentPath.startsWith(link.href);
              return (
                <li>
                  <a
                    href={link.href}
                    class:list={[
                      "rounded-md px-3 py-2 text-sm font-medium transition-colors",
                      isActive
                        ? "bg-gray-100 text-gray-900"
                        : "text-gray-600 hover:bg-gray-50 hover:text-gray-900",
                    ]}
                  >
                    {link.label}
                  </a>
                </li>
              );
            })
          }
        </ul>
      </nav>
      
      <div class="w-full sm:w-64">
        <Search />
      </div>
    </div>
  </div>
</header>